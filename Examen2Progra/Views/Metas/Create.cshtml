@model Examen2Progra.Models.Meta

@{
    ViewData["Title"] = "Crear Meta";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Crear Nueva Meta</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Categoria" class="form-label"></label>
                <select asp-for="Categoria" class="form-select"
                        asp-items="Html.GetEnumSelectList<Examen2Progra.Models.Categoria>()">
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FechaCreacion" class="form-label"></label>
                <input asp-for="FechaCreacion" class="form-control" readonly />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FechaLimite" class="form-label"></label>
                <input asp-for="FechaLimite" class="form-control" />
                <span asp-validation-for="FechaLimite" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Prioridad" class="form-label"></label>
                <select asp-for="Prioridad" class="form-select"
                        asp-items="Html.GetEnumSelectList<Examen2Progra.Models.Prioridad>()">
                </select>
                <span asp-validation-for="Prioridad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select"
                        asp-items="Html.GetEnumSelectList<Examen2Progra.Models.EstadoMeta>()">
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear Meta
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

