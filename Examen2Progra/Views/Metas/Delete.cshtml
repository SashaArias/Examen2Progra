@model Examen2Progra.Models.Meta

@{
    ViewData["Title"] = "Eliminar Meta";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Eliminar Meta</h4>
    </div>
    <div class="card-body">
        <h5>¿Está seguro de que desea eliminar esta meta?</h5>
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            <dt class="col-sm-3">Categoría</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria)</dd>
            <dt class="col-sm-3">Fecha de Creación</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCreacion)</dd>
            <dt class="col-sm-3">Fecha Límite</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaLimite)</dd>
            <dt class="col-sm-3">Prioridad</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Prioridad)</dd>
            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-end">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

