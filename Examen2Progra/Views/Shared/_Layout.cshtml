<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Examen2Progra</title>

    <!-- Chart.js desde CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Estilos del sitio -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <!-- Navbar con degradado, íconos y margen inferior -->
        <nav class="navbar navbar-expand-sm navbar-dark mb-4"
             style="background: linear-gradient(135deg, #364fc7 0%, #42d686 100%);">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-rocket-fill fs-4 me-2"></i>
                    Examen2Progra
                </a>
                <!-- Botón de colapso para móviles -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menú con enlaces (solo íconos) -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Charts"
                               asp-action="Index"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="Gráficos">
                                <i class="bi bi-bar-chart-line fs-4"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Metas"
                               asp-action="Index"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="Metas">
                                <i class="bi bi-flag-fill fs-4"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Tareas"
                               asp-action="Index"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="Tareas">
                                <i class="bi bi-list-check fs-4"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-center text-muted py-3">
        <div class="container">
            &copy; 2024 - Examen2Progra -
            <a class="text-muted" asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
        </div>
    </footer>

    <!-- Bootstrap Bundle (Incluye Popper) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts del sitio -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Activar tooltips -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
