@model Examen2Progra.Models.Tarea

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Eliminar Tarea</h4>
    </div>
    <div class="card-body">
        <h5>¿Está seguro de que desea eliminar esta tarea?</h5>
        <dl class="row">
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            <dt class="col-sm-3">Dificultad</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Dificultad)</dd>
            <dt class="col-sm-3">Tiempo Estimado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TiempoEstimado)</dd>
            <dt class="col-sm-3">Meta Asociada</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Meta.Titulo)</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-end">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

