@model Examen2Progra.Models.Tarea

@{
    ViewData["Title"] = "Detalles de la Tarea";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">Detalles de la Tarea</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            <dt class="col-sm-3">Fecha de Creación</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCreacion)</dd>
            <dt class="col-sm-3">Fecha Límite</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaLimite)</dd>
            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            <dt class="col-sm-3">Dificultad</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Dificultad)</dd>
            <dt class="col-sm-3">Tiempo Estimado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TiempoEstimado)</dd>
            <dt class="col-sm-3">Meta Asociada</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Meta.Titulo)</dd>
        </dl>
        <div class="text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-fill"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
    </div>
</div>

