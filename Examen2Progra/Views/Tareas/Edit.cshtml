@model Examen2Progra.Models.Tarea

@{
    ViewData["Title"] = "Editar Tarea";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-warning text-white">
        <h4 class="mb-0">Editar Tarea</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FechaCreacion" class="form-label"></label>
                <input asp-for="FechaCreacion" class="form-control" readonly />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FechaLimite" class="form-label"></label>
                <input asp-for="FechaLimite" class="form-control" />
                <span asp-validation-for="FechaLimite" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select"
                        asp-items="Html.GetEnumSelectList<Examen2Progra.Models.EstadoTarea>()"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Dificultad" class="form-label"></label>
                <select asp-for="Dificultad" class="form-select"
                        asp-items="Html.GetEnumSelectList<Examen2Progra.Models.Dificultad>()"></select>
                <span asp-validation-for="Dificultad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TiempoEstimado" class="form-label"></label>
                <input asp-for="TiempoEstimado" class="form-control" type="number" min="1" />
                <span asp-validation-for="TiempoEstimado" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="MetaId" class="form-label"></label>
                <select asp-for="MetaId" class="form-select" asp-items="ViewBag.MetaId"></select>
                <span asp-validation-for="MetaId" class="text-danger"></span>
            </div>
            <div class="mb-3 text-end">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-pencil-fill"></i> Actualizar Tarea
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


